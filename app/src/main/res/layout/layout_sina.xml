<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录" />

    <Button
        android:id="@+id/tv_share_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="文字" />

    <Button
        android:id="@+id/tv_share_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="单张图片" />

    <Button
        android:id="@+id/tv_share_text_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="图文（单张）" />

    <Button
        android:id="@+id/tv_share_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="图pian（多张）" />

    <Button
        android:id="@+id/tv_share_text_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="图文（多张）" />

    <Button
        android:id="@+id/tv_share_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="视频" />

    <Button
        android:id="@+id/tv_share_video_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="视频+文字" />

    <Button
        android:id="@+id/tv_share_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="page" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            tools:text="测试" />
    </LinearLayout>


</LinearLayout>